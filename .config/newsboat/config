bind-key x pb-delete

unbind-key SPACE
bind-key SPACE macro-prefix

browser linkhandler
macro w open-in-browser
macro v set browser "setsid -f mpv" ; open-in-browser ; set browser linkhandler
macro d set browser "tsp yt-dlp -f 'bestvideo[ext=mp4][height=1080]+bestaudio[ext=m4a]/best[ext=mp4]'  --merge-output-format mp4 --embed-thumbnail -o '$HOME/vids/%(title)s.%(ext)s'" ; open-in-browser ; set browser linkhandler
macro p set browser "tsp yt-dlp -x --audio-format mp3 --embed-metadata --embed-thumbnai -o '$HOME/podcasts/%(title)s.%(ext)s'" ; open-in-browser ; set browser linkhandler

