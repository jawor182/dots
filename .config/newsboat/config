unbind-key SPACE
bind-key SPACE macro-prefix

external-url-viewer "urlscan -dc -r 'linkhandler {}'"
browser linkhandler
macro SPACE open-in-browser
macro v set browser "setsid -f mpv --quiet" ; open-in-browser ; set browser linkhandler
macro d set browser "tsp yt-dlp -f 'bestvideo[ext=mp4][height<=1080]+bestaudio[ext=m4a]/best[ext=mp4]'  --merge-output-format mp4 --embed-thumbnail --extractor-args 'youtube:player_client=tv_simply,default,-tv' -o '$HOME/vids/%(title)s.%(ext)s'" ; open-in-browser ; set browser linkhandler
macro p set browser "tsp yt-dlp -x --audio-format mp3 --embed-metadata --embed-thumbnail --extractor-args 'youtube:player_client=tv_simply,default,-tv' -o '$HOME/podcasts/%(title)s.%(ext)s'" ; open-in-browser ; set browser linkhandler
macro w set browser "lynx" ; open-in-browser ; set browser linkhandler
macro x set browser "xdg-open" ; open-in-browser ; set browser linkhandler

