#!/bin/sh

temp=$(sensors | awk '/^Tctl:/ {print $2}' | sed 's/+//')
usage=$(top -b -n 1 | grep "Cpu(s)" | awk '{printf  $2}' | xargs printf "%.1f%%\n")

case $BLOCK_BUTTON in
    1) notify-send "Temperature of cpu:" "$temp" ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

printf "%s\n" "ï‹› $usage"
