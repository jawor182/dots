#!/bin/sh

if [ "$XDG_SESSION_TYPE" = "x11" ]; then
    option=$(printf 'Lock Screen\nPower Off\nReboot\nSuspend' | dmenu -c -i -l 4 -p "What do you want to do?")
    LOCK="slock"
else
    option=$(printf 'Lock Screen\nPower Off\nReboot\nSuspend' | fuzzel -d -i -l 4 -p "What do you want to do? ")
    LOCK="gtklock"
fi

case $option in
"Power Off") systemctl poweroff ;;
"Reboot") systemctl reboot ;;
"Suspend") systemctl suspend && [ "$XDG_SESSION_TYPE" = "x11" ] && "$LOCK" ;;
"Lock Screen") $LOCK ;;
*) ;;
esac
