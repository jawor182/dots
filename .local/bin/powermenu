#!/bin/sh

if [ "$XDG_SESSION_TYPE" = "x11" ]; then
    option=$(printf 'Lock Screen\nPower Off\nReboot\nSuspend' | dmenu -c -i -l 4 -p "What do you want to do?")
    LOCK="slock"
else
    option=$(printf 'Lock Screen\nPower Off\nReboot\nSuspend' | bemenu --fixed-height -W 0.3 -c -i -l 4 -p "What do you want to do? ")
    LOCK="hyprlock"
fi

case $option in
"Power Off") systemctl poweroff ;;
"Reboot") systemctl reboot ;;
"Suspend") $LOCK & systemctl suspend ;;
"Lock Screen") $LOCK ;;
*) ;;
esac
